<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F0EDED">
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".UserBlade.CheckOut"
        android:orientation="vertical"
        android:layout_marginTop="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/primary_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/uname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Boji Astilla"
                android:clickable="false"/>
            <TextView
                android:layout_marginTop="12sp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/uemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asdsad@mail.com"
                android:clickable="false"/>
            <TextView
                android:layout_marginTop="12sp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/uphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="09063903981"
                android:clickable="false"/>
            <TextView
                android:layout_marginTop="12sp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="House Number, Building, and Street Name"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/uaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:clickable="false"/>

            <TextView
                android:layout_marginTop="12sp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City/Municipality"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/ucity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:clickable="false"/>


        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardView"
            android:layout_margin="7dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/product_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>
                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/img_description"
                        android:text="Image Caption/Description"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp">
                        <TextView
                            android:id="@+id/miligram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100 grams"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp">
                        <TextView
                            android:id="@+id/expiry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expiry date: February 2019"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10sp"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp">
                        <TextView
                            android:id="@+id/Price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="P 100.00"
                            android:textSize="26sp"
                            android:textStyle="bold" />
                        <EditText
                            android:id="@+id/quantity"
                            android:layout_marginLeft="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter quantity"
                            android:layout_marginStart="10sp"
                            android:inputType="number"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    <LinearLayout
        android:padding="10sp"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drug Prescription"
            android:textSize="18sp"
            android:textAlignment="center"/>
        <ImageView
            android:id="@+id/prescriptionimg"
            android:layout_width="match_parent"
            android:layout_height="400sp"
            android:scaleType="centerCrop"
            android:src="@drawable/noselectedimage"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/chooseimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Image"/>
    </LinearLayout>

        <LinearLayout
        android:padding="10sp"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <EditText
            android:id="@+id/add_notes"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:hint="Add notes"
            android:inputType="text|textMultiLine"
            android:gravity="top"/>
    </LinearLayout>
        <Button
            android:id="@+id/saveinfo"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3sp"
            android:layout_marginBottom="10sp"
            android:text="Confirm Order"
            android:textColor="@color/colorWhite"
            android:backgroundTint="@color/colorAppPrimary" />
    </LinearLayout>

</RelativeLayout>
</ScrollView>